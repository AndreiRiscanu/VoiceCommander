<UserControl x:Class="VoiceCommander.UI.OutputTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoiceCommander.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TextBox>
        <TextBox.VerticalScrollBarVisibility>Auto</TextBox.VerticalScrollBarVisibility>
        <TextBox.IsReadOnly>True</TextBox.IsReadOnly>
        <TextBox.AcceptsReturn>True</TextBox.AcceptsReturn>
        <TextBox.TextWrapping>Wrap</TextBox.TextWrapping>
        <TextBox.Background>#fdfaf4</TextBox.Background>
    </TextBox>
</UserControl>
