<Window x:Class="VoiceCommander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoiceCommander"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">

    <DockPanel>
        <!-- Menu bar -->
        <Menu DockPanel.Dock="Top" Padding="1" Background="#E0C9AD">
            <MenuItem Header="Menu">
                <MenuItem Header="1" />
                <MenuItem Header="2" />
                <MenuItem Header="3" />
            </MenuItem>

            <MenuItem Header="Options">
                <MenuItem Header="1" />
                <MenuItem Header="2" />
                <MenuItem Header="3" />
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="1" />
                <MenuItem Header="2" />
                <MenuItem Header="3" />
            </MenuItem>
        </Menu>

        <TextBox Padding="2" Background="#eee" DockPanel.Dock="Bottom" MaxLength="298" />

        <!-- Panels with which the user will interact -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Panel used for user input -->
            <TextBox Background="#fdfaf4" IsReadOnly="True" Grid.Column="0" />
            
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#E0C9AD"></GridSplitter>
            <!-- Panel used to display the output of the command -->
            
            <TreeView x:Name="FolderView" Background="#fdfaf4" Grid.Column="2">
                <TreeView.Resources>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="20" Margin="3" Source="Images/drive.png" />
                                        <TextBlock VerticalAlignment="Center" Text="Some Folder" />
                                    </StackPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TreeView.Resources>
            </TreeView>
        </Grid>
        
    </DockPanel>
    
</Window>
